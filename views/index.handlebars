<h1> Expenses for {{ name }}</h1>
{{# if owned_unfinished_expenses}}
    <h2>Owned Unfinished Expenses</h2>
    <ul class="expense-listing">
      {{#each owned_unfinished_expenses}}
          <li class="expense-listing-item">
              <div><a href='expense/{{this.expense_id}}'>{{ this.title }}</a> - {{ this.owner.name }}</div>
              <div> {{format_money this.value }} </div>
            {{# with this.participants_status }}
              {{> participant-list }}
            {{/with}}
            {{# if this.receipt_image }}
            {{! TODO: factor out this path somehow }}
                <img src="/thumb/{{ this.receipt_image }}/320x240" />
            {{/if}}
          </li>
      {{/each}}
    </ul>
{{/if}}
