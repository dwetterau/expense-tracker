{{# with expense }}
  <h1> {{ this.title }} </h1>
  {{# if this.description }}
    <p> {{ this.description }} </p>
  {{/if }}
  <p> value: {{format_money this.value }} </p>
  {{> participant-list }}
{{/with}}
{{# if expense.image_id }}
  {{! TODO: factor out this path somehow }}
  <img src="/thumb/{{ expense.image_id }}/640x480" />
{{/if}}
